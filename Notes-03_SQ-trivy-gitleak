pipeline {
    agent any

    tools {
        maven 'maven'
    }

    environment {
        GIT_REPO_URL = 'https://github.com/sabanuzhat/hello-world.git'
        BRANCH = 'master'
        SONAR_HOST_URL = 'http://13.233.166.219:9000'
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: "${env.BRANCH}", url: "${env.GIT_REPO_URL}"
            }
        }

        stage('Gitleaks Secret Scan') {
            steps {
                script {
                    sh '''
                        docker run --rm \
                        -v $(pwd):/path \
                        zricethezav/gitleaks:latest \
                        detect --source=/path --no-git --report-format=json --report-path=gitleaks-report.json || true
                    '''
                }
            }
        }

        stage('Trivy Vulnerability Scan') {
            steps {
                script {
                    sh '''
                        docker run --rm \
                        -v $(pwd):/scan \
                        aquasec/trivy:latest \
                        fs /scan \
                        --exit-code 0 \
                        --skip-dirs .git,target/test-classes \
                        --format table || true
                    '''
                }
            }
        }

        stage('SonarQube Scan') {
            steps {
                withCredentials([string(credentialsId: 'sonar_token', variable: 'SONAR_TOKEN')]) {
                    sh """
                        mvn sonar:sonar \
                        -Dsonar.projectKey=hello-world \
                        -Dsonar.host.url=${SONAR_HOST_URL} \
                        -Dsonar.login=${SONAR_TOKEN}
                    """
                }
            }
        }
    }

    post {
        success {
            echo "‚úÖ Build completed successfully!"
        }
        failure {
            echo "‚ùå Build failed."
        }
    }
}




